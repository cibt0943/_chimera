{
  "name": "chimera",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "NODE_OPTIONS=--max_old_space_size=2048 webpack serve --mode=development --progress",
    "build:development": "webpack --mode=development --progress",
    "build:production": "webpack --mode=production --progress",
    "fix": "npm run -s format && npm run -s lint:fix",
    "format": "prettier --write --loglevel=warn './frontend/**/*.{js,jsx,ts,tsx,json}'",
    "lint": "npm run -s lint:style && npm run -s lint:es",
    "lint:fix": "npm run -s lint:style:fix && npm run -s lint:es:fix",
    "lint:es": "eslint './frontend/**/*.{js,jsx,ts,tsx}'",
    "lint:es:fix": "eslint --fix './frontend/**/*.{js,jsx,ts,tsx}'",
    "lint:style": "stylelint './frontend/**/*.{css,scss}'",
    "lint:style:fix": "stylelint --fix './frontend/**/*.{css,scss}'",
    "postinstall": "typesync || :",
    "prepare": "simple-git-hooks > /dev/null",
    "build:tailwind": "NODE_ENV=production tailwind build -i ./frontend/assets/css/style.scss -o ./frontend/assets/css/tailwind.scss"
  },
  "simple-git-hooks": {
    "pre-commit": "./pre-commit.sh"
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx}": [
      "prettier --loglevel=warn",
      "eslint"
    ],
    "frontend/**/*.{css,scss}": [
      "stylelint"
    ],
    "*.{rb,rake}": [
      "bundle exec rubocop"
    ]
  },
  "dependencies": {
    "@auth0/auth0-react": "^1.8.0",
    "@chakra-ui/react": "^1.6.8",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@heroicons/react": "^1.0.2",
    "classnames": "^2.3.1",
    "framer-motion": "^4",
    "ky": "^0.28.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-hook-form": "^7.16.2",
    "react-router-dom": "^5.2.0",
    "swr": "^1.0.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.4.1",
    "@types/eslint": "^7.2.12",
    "@types/mini-css-extract-plugin": "^2.3.0",
    "@types/prettier": "^2.4.1",
    "@types/react": "^17.0.26",
    "@types/react-dom": "^17.0.5",
    "@types/react-helmet": "^6.1.1",
    "@types/react-router-dom": "^5.3.0",
    "@types/sass": "^1.16.0",
    "@types/stylelint": "^13.13.2",
    "@types/webpack-bundle-analyzer": "^4.4.0",
    "@types/webpack-dev-server": "^4.1.0",
    "@types/webpack-manifest-plugin": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "@welldone-software/why-did-you-render": "^6.2.1",
    "autoprefixer": "^10.3.6",
    "css-loader": "^6.3.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "dotenv": "^10.0.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.1.2",
    "lint-staged": "^11.0.0",
    "mini-css-extract-plugin": "^2.3.0",
    "postcss": "^8.3.8",
    "postcss-loader": "^6.1.1",
    "prettier": "^2.4.1",
    "sass": "^1.42.1",
    "sass-loader": "^12.1.0",
    "simple-git-hooks": "^2.4.1",
    "stylelint": "^13.13.0",
    "stylelint-config-recess-order": "^2.4.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "tailwindcss": "^2.2.16",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.3",
    "typesync": "^0.8.0",
    "webpack": "^5.56.0",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^4.3.0",
    "webpack-manifest-plugin": "^4.0.2"
  }
}
